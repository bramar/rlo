{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rloCommon": {
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-05-01",
            "name": "vNetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "rloCommon": {
                        "value": "[parameters('rloCommon')]"
                    }
                },
                "templateLink": {
                    "uri": "[uri(parameters('rloCommon').baseArtifactLocation, 'templates/network-vnet.json')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-05-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/vNetTemplate"
            ],
            "name": "subnetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "rloCommon": { "value": "[parameters('rloCommon')]" },
                    "subnetName": { "value": "[concat(parameters('rloCommon').vnetName, '/subnet')]" }
                },
                "templateLink": {
                    "uri": "[uri(parameters('rloCommon').baseArtifactLocation, 'templates/network-subnets.json')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-05-01",
            "name": "publicIPAddress",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "rloCommon": { "value": "[parameters('rloCommon')]"}
                },
                "templateLink": {
                    "uri": "[uri(parameters('rloCommon').baseArtifactLocation, 'templates/publicip.json')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-05-01",
            "name": "fetchIpAddress",
            "dependsOn": [
                "Microsoft.Resources/deployments/publicIPAddress"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('rloCommon').baseArtifactLocation, 'templates/fetchPublicIP.json')]"
                },
                "parameters": {
                    "publicIPAddressId": {
                        "value": "[reference('publicIPAddress').outputs.publicIpId.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "publicIpId": {
            "value": "[reference('publicIPAddress').outputs.publicIpId.value]",
            "type": "string"
        },
        "subnetId": {
            "value": "[reference('subnetTemplate').outputs.subnetId.value]",
            "type": "string"
        },
        "publicIp": {
            "value": "[reference('fetchIpAddress').outputs.ipAddress.value]",
            "type": "string"
        },
        "domainNameLabel": {
            "value": "[reference('fetchIpAddress').outputs.domainNameLabel.value]",
            "type": "string"
        }
    }
}
