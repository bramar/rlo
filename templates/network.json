{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rloCommon": {
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "vNetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "rloCommon": {
                        "value": "[parameters('rloCommon')]"
                    }
                },
                "templateLink": {
                    "uri": "[uri(parameters('rloCommon').baseArtifactLocation, 'templates/network-vnet.json')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "Microsoft.Resources/deployments/vNetTemplate"
            ],
            "name": "subnetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "tEduCommon": { "value": "[parameters('rloCommon')]" },
                    "subnetName": { "value": "[concat(parameters('rloCommon').vnetName, '/subnet')]" }
                },
                "templateLink": {
                    "uri": "[uri(parameters('rloCommon').baseArtifactLocation, 'templates/network-subnets.json')]"
                }
            }
        }
    ]
}
