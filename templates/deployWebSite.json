{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rloCommon": {
            "type": "object"
        },
        "domainNameLabel": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "ComtradeRLO",
            "kind": "functionapp",
            "location": "[parameters('rloCommon').location]",
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'rloServerFarm')]"
            },
            "resources": [
                {
                    "name": "MSDeploy",
                    "type": "extensions",
                    "location": "[parameters('rloCommon').location]",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites','ComtradeRLO')]"
                    ],
                    "properties": {
                        "packageUri": "[uri(parameters('rloCommon').baseArtifactLocation,'/webapp/package.zip')]",
                        "dbType": "",
                        "connectionString": "",
                        "setParameters": {
                            "IIS Web Application Name": "Comtrade RLO"
                        },
                        "appSettings": [
                            {
                                "Name": "",
                                "Value": ""
                            }
                        ]
                    }
                },
                {
                    "apiVersion": "2018-11-01",
                    "name": "appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', 'ComtradeRLO')]"
                    ],
                    "properties": {
                        "connectionStrings": "[concat('Data Source=tcp:', parameters('domainNameLabel'), ';Initial Catalog=rlodb;User ID=',parameters('rloCommon').adminUsername,';Password=',parameters('rloCommon').adminPassword,';')]"
                    }
                }
            ]
        }
    ]
}