{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rloCommon": {
            "type": "object"
        },
        "domainNameLabel": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "ComtradeRLO",
            "location": "[parameters('rloCommon').location]",
            "properties": {
                "name": "ComtradeRLO",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'rloServerFarm')]"
            },
            "resources": [
                {
                    "name": "MSDeploy",
                    "type": "extensions",
                    "location": "[parameters('rloCommon').location]",
                    "apiVersion": "2018-11-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites','ComtradeRLO')]"
                    ],
                    "properties": {
                        "packageUri": "[concat(parameters('rloCommon').baseArtifactLocation,'webapp/package.zip')]",
                        "dbType": "",
                        "connectionString": "",
                        "setParameters": {
                            "IIS Web Application Name": "Comtrade RLO"
                        },
                        "appSettings": [
                            {
                                "Name": "",
                                "Value": ""
                            }
                        ]
                    }
                },
                {
                    "apiVersion": "2018-11-01",
                    "name": "appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', 'ComtradeRLO')]"
                    ],
                    "properties": {
                        "connectionStrings": "[concat('Data Source=tcp:', parameters('domainNameLabel'), ';Initial Catalog=rlodb;User ID=',parameters('rloCommon').adminUsername,';Password=',parameters('rloCommon').adminPassword,';')]"
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Insights/autoscalesettings",
            "apiVersion": "2015-04-01",
            "name": "ComtradeRLO-AutoScale",
            "location": "[parameters('rloCommon').location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', 'ComtradeRLO')]"
            ],
            "properties": {
                "profiles": [{
                    "name": "Default",
                    "capacity": {
                        "minimum": 1,
                        "maximum": 2,
                        "default": 1
                    },
                    "rules": [
                        {
                            "metricTrigger": {
                                "metricName": "CpuPercentage",
                                "metricResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.web/serverfarms/', 'rloServerFarm')]",
                                "timeGrain": "PT1M",
                                "statistics": "Average",
                                "timeWindow": "PT10M",
                                "timeAggregation":"Average",
                                "operator":"GreaterThan",
                                "threshold": 80.0
                            },
                            "scaleAction": {
                                "direction":"Increase",
                                "type":"ChangeCount",
                                "value": 1,
                                "cooldown": "PT10M"
                            }
                        },
                        {
                            "metricTrigger": {
                                "metricName": "CpuPercentage",
                                "metricResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.web/serverfarms/', 'rloServerFarm')]",
                                "timeGrain": "PT1M",
                                "statistics": "Average",
                                "timeWindow": "PT1H",
                                "timeAggregation":"Average",
                                "operator":"LessThan",
                                "threshold": 60.0
                            },
                            "scaleAction": {
                                "direction":"Decrease",
                                "type":"ChangeCount",
                                "value": 1,
                                "cooldown": "PT1H"
                            }
                        }
                    ]
                }],
                "enabled": false,
                "name": "AutoscaleRLO",
                "targetResourceUri": "[concat(resourceGroup().id, '/providers/Microsoft.web/serverfarms/', 'rloServerFarm')]"
            }
        }
    ]
}